# Mark generated documentation as linguist-generated
# This excludes them from GitHub language statistics and diffs
apps/backend/docs/** linguist-generated=true
apps/frontend/docs/** linguist-generated=true

# Mark generated/compiled files
apps/backend/dist/** linguist-generated=true

# Ensure consistent line endings
* text=auto
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.prisma text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

